<html>
<head>
    <title></title>
</head>
<body>
    <div id="header">
        <div><img src="/images/fixnix.png"></div>
    </div>
    <div id="main-wrap">
        <div id="sidebar">
             <%= render :partial => "policylayout/menu" %>
        </div>
        <div id="content-wrap">
            <div class="sapn10 offset well">
                <div class="tabbable">
                    <ul class="nav nav-tabs">
                        <li class="active"><a href="#Policy" data-toggle="tab">Members</a></li>
                    </ul>
                    <div class="tab-content">
                        <div id="Policy" class="tab-pane active">

                            <table class="table table-bordered">
                              <tr>
                                <th>Membername</th>
                                <th>Department</th>
                                <th>Role</th>
                                <th></th>
                                <th></th>
                                 <th></th>
                              </tr>


                            <% @members.each do |member| %>
                              <tr>
                                <td><%= member.membername %></td>
                                <td><%= member.department %></td>
                                <td><%= member.role %></td>
                                <td><%= link_to 'Show', member %></td>
                                <td><%= link_to 'Edit', edit_member_path(member) %></td>
                                <td><%= link_to 'Destroy', member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                              </tr>
                            <% end %>
                        </table>

                        <br />

                        <%= link_to 'New Member', new_member_path , :class => "pure-button pure-button-primary"  %>
                    </div>
                </div><!-- /.tab-content -->
            </div><!-- /.tabbable -->
        </div>
    </div>
</div>
<!-- <div id="footer">Footer</div> -->
</body>
</html>