<%= form_for(@standard) do |f| %>
  <% if @standard.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@standard.errors.count, "error") %> prohibited this standard from being saved:</h2>

      <ul>
      <% @standard.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>



<div class="span11 offset well">
  <div class="form-horizontal">

    <div class="control-group">
      <%= f.label :title %><br />
    <%= f.text_field :title %>
    </div>
    <div class="control-group">
      <%= f.label :scope %><br />
    <%= f.text_field :scope %>
    </div>
    <div class="control-group">
      <%= f.label :description %><br />
    <%= f.text_field :description %>
    </div>
    <div class="control-group">
         <%= f.label :startdate %><br />
    <%= f.date_select :startdate %>
    </div>
    <div class="control-group">
      <%= f.label :enddate %><br />
    <%= f.date_select :enddate %>
    </div>
    
    <div class="control-group">
      <%= f.submit 'Create Standards', :class => "pure-button pure-button-primary"%>
      <%= link_to 'Cancel', standards_path , :class => "pure-button pure-button-primary" %>
    </div>
    <% end %>
  </div>
</div>
