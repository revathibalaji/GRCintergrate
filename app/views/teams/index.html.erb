<html>
<head>
    <title></title>
</head>
<body>
    <div id="header">
        <div><img src="/images/fixnix.png"></div>
    </div>
    <div id="main-wrap">
        <div id="sidebar">
            <%= render :partial => "layouts/menu" %>
        </div>
        <div id="content-wrap">
            <div class="sapn10 offset well">
                <div class="tabbable">
                    <ul class="nav nav-tabs">
                        <li class="active"><a href="#Policy" data-toggle="tab">Team Contact Details</a></li>
                        <!-- <li><a href="#EP" data-toggle="tab">Existing Risks</a></li> -->
                    </ul>
                    <div class="tab-content">
                        <div id="Policy" class="tab-pane active">
                            <table class="table table-bordered">
                              <tr>
                                <th>Post</th>
                                <th>Name</th>
                                <th>Dept</th>
                                <!-- <th>Destination</th>
                                <th>Officeno</th>
                                <th>Mobile</th> -->
                                <th>Email</th>
                               <!--  <th>Responsible</th> -->                                
                              </tr>

                            <% @teams.each do |team| %>
                              <tr>
                                <td><%= team.post %></td>
                                <td><%= team.name %></td>
                                <td><%= team.dept %></td>
                                <!-- <td><%= team.destination %></td>
                                <td><%= team.officeno %></td>
                                <td><%= team.mobile %></td> -->
                                <td><%= team.email %></td>
                               <!--  <td><%= team.responsible %></td> -->
                                <td><%= link_to 'Show', team %></td>
                                <td><%= link_to 'Edit', edit_team_path(team) %></td>
                                <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                              </tr>
                            <% end %>
                            </table>
                            <br />
                            <%= link_to '+ New Team Contact', new_team_path , :class => "pure-button pure-button-primary" %>
                            </div>
                         <div id="EP" class="tab-pane">
                        <h4>Existing Risks</h4>
                        <p> Coming Soon ...</p>
                    </div>
                </div><!-- /.tab-content -->
            </div><!-- /.tabbable -->
        </div>
    </div>
</div>
<!-- <div id="footer">Footer</div> -->
</body>
</html>