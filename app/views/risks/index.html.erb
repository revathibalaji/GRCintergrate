<html>
<head>
    <title></title>
</head>
<body>
    <div id="header">
        <div><img src="/images/fixnix.png"></div>
    </div>
    <div id="main-wrap">
        <div id="sidebar">
            <%= render :partial => "layouts/menu" %>
        </div>
        <div id="content-wrap">
            <div class="sapn10 offset well">
                <div class="tabbable">
                    <ul class="nav nav-tabs">
                        <li class="active"><a href="#Policy" data-toggle="tab">Risks</a></li>
                        <!-- <li><a href="#EP" data-toggle="tab">Existing Risks</a></li> -->
                    </ul>
                    <div class="tab-content">
                        <div id="Policy" class="tab-pane active">
                            <table class="table table-bordered">
                               <tr>
                                <th>ID</th>
                                <th>Risk By</th>
                               <!--  <th>Consequence current</th>
                                <th>Consequence target</th>
                                <th>Likelihood current</th>
                                <th>Likelihood target</th> -->
                                <th>Risk level</th>
                              </tr>

                            <% @risks.each do |risk| %>
                              <tr>
                                <td><%= risk.risk_id %></td>
                                <td><%= risk.risk %></td>
                                <!-- <td><%= risk.consequence_current %></td>
                                <td><%= risk.consequence_target %></td>
                                <td><%= risk.likelihood_current %></td>
                                <td><%= risk.likelihood_target %></td> -->
                                <td><%= risk.risk_level %></td>
                                <td><%= link_to 'Show', risk %></td>
                                <td><%= link_to 'Edit', edit_risk_path(risk) %></td>
                                <td><%= link_to 'Destroy', risk, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                              </tr>
                            <% end %>
                                                        </table>

                            <br />

                            <%= link_to '+ Add New Risk', new_risk_path , :class => "pure-button pure-button-primary" %>
                            </div>
                         <div id="EP" class="tab-pane">
                        <h4>Existing Risks</h4>
                        <p> Coming Soon ...</p>
                    </div>
                </div><!-- /.tab-content -->
            </div><!-- /.tabbable -->
        </div>
    </div>
</div>
<!-- <div id="footer">Footer</div> -->
</body>
</html>