<html>
<head>
    <title></title>
</head>
<body>
    <div id="header">
        <div><img src="/images/fixnix.png"></div>
    </div>
    <div id="main-wrap">
        <div id="sidebar">
            <%= render :partial => "layouts/menu" %>
        </div>
        <div id="content-wrap">
            <div class="sapn10 offset well">
                <div class="tabbable">
                    <ul class="nav nav-tabs">
                        <li class="active"><a href="#Policy" data-toggle="tab">Crisis</a></li>
                        <!-- <li><a href="#EP" data-toggle="tab">Existing Crisis</a></li> -->
                    </ul>
                    <div class="tab-content">
                        <div id="Policy" class="tab-pane active">
                            <table class="table table-bordered">

                              <tr>
                                <th>Crisis</th>
                                <!-- <th>Summary</th> -->
                                <th>Datetime occured</th>
                                <!-- <th>Details</th> -->
                                <th>Crisis status</th>
                                <!-- <th>Crisis category</th>
                                <th>Crisis test</th> -->
                                <th>Crisis type</th>
                                <th>Crisis severity</th>
                              </tr>

                            <% @crises.each do |crisis| %>
                              <tr>
                                <td><%= crisis.crisis_id %></td>
                                <!-- <td><%= crisis.summary %></td> -->
                                <td><%= crisis.Datetime_occured %></td>
                                <!-- <td><%= crisis.Details %></td> -->
                                <td><%= crisis.crisis_status %></td>
                                <!-- <td><%= crisis.crisis_Category %></td>
                                <td><%= crisis.crisis_test %></td> -->
                                <td><%= crisis.crisis_type %></td>
                                <td><%= crisis.crisis_severity %></td>
                                <td><%= link_to 'Show', crisis %></td>
                                <td><%= link_to 'Edit', edit_crisis_path(crisis) %></td>
                                <td><%= link_to 'Destroy', crisis, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                            </tr>
                            <% end %>
                            </table>
                            <br />
                               <%= link_to '+ Add New Crisis', new_crisis_path , :class => "pure-button pure-button-primary" %>
                            </div>
                         <div id="EP" class="tab-pane">
                        <h4>Existing Crisis</h4>
                        <p> Coming Soon ...</p>
                    </div>
                </div><!-- /.tab-content -->
            </div><!-- /.tabbable -->
        </div>
    </div>
</div>
<!-- <div id="footer">Footer</div> -->
</body>
</html>